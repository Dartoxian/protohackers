{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "lib": [
      "es6"
    ],
    "baseUrl": "./"
  },
  "include": ["./src/**.ts"],

  "exclude": [
    "node_modules"
  ]
}
